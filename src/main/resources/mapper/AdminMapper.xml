<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.book.system.mapper.AdminMapper">
    <resultMap id="BaseResultMap" type="com.book.system.entity.Admin">
        <id column="admin_id" jdbcType="INTEGER" property="adminId" />
        <result column="admin_name" jdbcType="VARCHAR" property="adminName" />
        <result column="admin_pwd" jdbcType="VARCHAR" property="adminPwd" />
        <result column="admin_email" jdbcType="VARCHAR" property="adminEmail" />
        <!-- 添加元素 -->
    </resultMap>
    <sql id="Base_Column_List">
        admin_id,admin_name,admin_pwd,admin_email
    </sql>
    <select id="adminLogin" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from p_admin
        where admin_name = #{adminName,jdbcType=VARCHAR} AND admin_pwd=#{adminPwd,jdbcType=VARCHAR}
    </select>
</mapper>